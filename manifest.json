{
  "manifest_version": 2,

  "name": "Click Shirt",
  "description": "Buy shirts a shirt printed with any image on the internet. With one click",
  "version": "0.0.2",

  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "t-shirt_silver.png"
  },
  "permissions": [
    "contextMenus",
    "<all_urls>",
    "windows"
  ],
  "background": {
    "scripts": ["scripts/menu.js"]
  },
  "sandbox": {
     "pages": ["index.html", "scripts/menu.js"]
  },
  "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/modal.js"
            ]
        }
    ],
  "icons": { "16": "t-shirt.png",
           "48": "t-shirt_silver.png"
          }
}